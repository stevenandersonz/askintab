{
  "name": "Ask in Tab",
  "version": "0.5",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "scripting",
    "commands",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "128": "./askintab.png"
    }
  },
  "commands": {
    "toggle-chat": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Toggle AskInTab Side Chat"
    }
  }
}
