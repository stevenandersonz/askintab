{
  "name": "Ask in Tab",
  "version": "0.5",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "./public/askintab.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"], 
      "css": ["styles.css"],
      "js": ["libs/mermaid.min.js","libs/marked.min.js","content.js"],
      "run_at": "document_end"
    }
  ]
}
